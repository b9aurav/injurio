generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BodyMapArea {
  id            Int            @id @default(autoincrement())
  label         String
  description   String
  injuryDetails InjuryDetail[]
  reports       InjuryReport[] @relation("BodyMapAreaToInjuryReport")
}

model InjuryReport {
  id             Int            @id @default(autoincrement())
  reporterId     String
  injuryDatetime DateTime
  bodyMapAreas   Json[]
  created_at     DateTime       @default(now())
  updated_at     DateTime       @updatedAt
  injuries       InjuryDetail[]
  reporter       User       @relation(fields: [reporterId], references: [id])
  bodyMapArea    BodyMapArea[]  @relation("BodyMapAreaToInjuryReport")
}

model InjuryDetail {
  id                Int          @id @default(autoincrement())
  reportId          Int
  bodyMapAreaId     Int
  injuryDescription String
  bodyMapArea       BodyMapArea  @relation(fields: [bodyMapAreaId], references: [id])
  report            InjuryReport @relation(fields: [reportId], references: [id])
}

model User {
  id      String         @id
  name    String
  reports InjuryReport[]
}
